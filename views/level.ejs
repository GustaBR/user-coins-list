<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head.ejs") %>

<body>

    <%- include("./partials/nav.ejs") %>

    <main class="flex-column">
        <div class="card level-card">
            <header class="level-card__header">
                <h2>Level info:</h2>
            </header>

            <ul class="level-card__info">
                <li><span class="bold">Position: </span>#<%= level.position %></li>
                <li><span class="bold">Level: </span><%= level.name %></li>
                <li><span class="bold">Creator: </span><%= level.creator %></li>
                <li><span class="bold"><%= level.points %></span> <%= inflectedAmountString(level.points, "Point", false) %></li>
            </ul>
        </div>

        <section class="completions-section">
        <% if (completions.length === 0) { %>
            <h3>0 Records</h3>
            <p>No completions... for now.</p>
        <% } else { %>
            <h3><%= inflectedAmountString(completions[0].players.length, "Completion") %></h3>
            <ul class="card completions-card">
                <% completions[0].players.forEach((player) => { %>
                    <li class="completions-card__entry"><a href="/players/<%= player.name %>"><%= player.name %></a></li>
                <% }); %>
            </ul>
        <% } %>
        </section>
    </main>
</body>
</html>